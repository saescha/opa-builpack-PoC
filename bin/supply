#!/bin/bash
# This script provides dependencies for an app


set -euo pipefail

BUILD_DIR=$1
CACHE_DIR=$2
DEPS_DIR=$3
DEPS_IDX=$4


export BUILDPACK_DIR=`dirname $(readlink -f ${BASH_SOURCE%/*})`


ls $BUILDPACK_DIR
echo "Hello World!" > "$DEPS_DIR/$DEPS_IDX/hello.txt"
echo "Downloading Open Policy Agent"
curl https://github.com/open-policy-agent/opa/releases/download/v0.10.5/opa_linux_amd64 > "$DEPS_DIR/$DEPS_IDX/bin/opa"
chmod +x "$DEPS_DIR/$DEPS_IDX/bin/opa"
