#!/usr/bin/env bash
# bin/release <build-dir>
# This script provides feedback metadata to Cloud Foundry indicating how the app should be executed

echo -e "---\ndefault_process_types:\n  web: './opa run -s -c OPAConfig --log-level=debug --addr=[]:\$PORT $(find /home/vcap/app -iname '*.rego' | xargs echo) $(find /home/vcap/app -iname '*.json' | xargs echo)'"
